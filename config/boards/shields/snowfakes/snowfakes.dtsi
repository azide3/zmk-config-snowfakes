#include "snowfakes_common.dtsi"

&snowfakes_layout {
    transform = <&default_transform>;
};

/ {
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
//  | SW18 | SW17 | SW16 | SW15 | SW14 |   | SW14 | SW15 | SW16 | SW17 | SW18 |
//  | SW13 | SW12 | SW11 | SW10 | SW09 |   | SW10 | SW11 | SW11 | SW12 | SW13 |
//  | SW08 | SW07 | SW06 | SW05 | SW04 |   | SW04 | SW05 | SW06 | SW07 | SW08 |
//                | SW03 | SW02 | SW01 |   | SW01 | SW02 | SW03 |
        map = <
RC(3,4) RC(3,3) RC(3,2) RC(3,1) RC(3,0)    RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0)    RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)    RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
                RC(0,2) RC(0,1) RC(0,0)    RC(0,5) RC(0,6) RC(0,7)
        >;
    };
};
